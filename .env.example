# PolyNot Chat Agent Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# Supabase Configuration
# ============================================================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================================================
# OpenAI Configuration
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# LangSmith Configuration (Optional - for tracing and debugging)
# ============================================================================
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=polynot

# ============================================================================
# Application Configuration
# ============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# Database Configuration
# ============================================================================
# SQLite database file path (for checkpoint storage)
CHECKPOINT_DB_PATH=./checkpoint.sqlite

# ============================================================================
# Security Configuration
# ============================================================================
# JWT Secret for authentication (generate a secure random string)
JWT_SECRET_KEY=your_jwt_secret_key_here

# Session secret (generate a secure random string)
SESSION_SECRET=your_session_secret_here

# ============================================================================
# CORS Configuration
# ============================================================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# ============================================================================
# Rate Limiting
# ============================================================================
# Rate limit per minute
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# File Upload Configuration
# ============================================================================
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,text/plain,application/pdf

# ============================================================================
# Email Configuration (if using email features)
# ============================================================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USE_TLS=true

# ============================================================================
# Monitoring and Analytics (Optional)
# ============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Google Analytics ID
GOOGLE_ANALYTICS_ID=your_ga_id_here
